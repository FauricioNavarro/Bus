<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Space
        android:layout_width="10dp"
        android:layout_height="1dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_imagen"
        android:layout_gravity="center_vertical"/>

    <Space
        android:layout_width="12dp"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titulo"
            android:text="TÃ­tulo"
            android:textSize="18dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_contenido"
            android:layout_below="@+id/tv_titulo"
            android:text="Contenido"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_contenido1"
            android:text="Contenido"
            android:layout_below="@+id/tv_titulo"
            android:layout_toRightOf="@id/tv_contenido"/>

        <TextView
            android:layout_toLeftOf="@id/tv_contenido2"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_contenido"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_contenido2"
            android:layout_below="@+id/tv_contenido"
            android:text="Contenido"/>

    </RelativeLayout>

</LinearLayout>